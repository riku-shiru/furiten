<h1>Sign in</h1>


	<%=form_for @user, url: users_path, method: :post do |f|%>

		<% if @user.errors.any? %>
			<% @user.errors.each do |attr, message| %>
					<li><%= message%></li>
			<%end%>
		<%end%>
	
		<%= f.label :student_id, "学籍番号 : s1990999", class: "control-label"%>
		<%=f.text_field :student_id, class: "form-control"%>
		<%=f.label :user_name, "会津　太郎", class: "control-label"%>
		<%=f.text_field :user_name, class: "form-control"%>
		<%=f.label :password, "パスワード: 6文字以上", class: "control-label"%>
		<%=f.password_field :password, class: "form-control"%>
		<%=f.label :password_confirmation, "パスワード確認", class: "control-label"%>
		<%=f.password_field :password_confirmation, class: "form-control" %>
		<%=f.submit "登録する"%>
	<%end%>

	<br>
	<%= link_to "Login",new_session_path%>