<h1>ユーザー情報編集</h1>


	<%= form_for @user do |f|%>

		<% if @user.errors.any? %>
			<% @user.errors.each do |attr, message| %>
					<%= message%>
			<%end%>
		<%end%>

	<% if @user.image? %>
      <div class="thumbnail">
        <%= image_tag @user.image.url,:size => "200x200" %>
      </div>
    <% end %><br>
    <%= f.label :image %>
    <%= f.file_field :image %><br>
    <%= f.hidden_field :image_cache %>
		<li><%=f.label :user_name, "会津　太郎", class: "control-label"%>
		<%=f.text_field :user_name, class: "form-control"%></li>
		<li><%=f.label :student_id, "s1220XXX", class: "control-label"%>
		<%=f.text_field :student_id, class: "form-control"%></li>
		<li><%=f.submit "変更する"%></li>
	<%end%>

	<br>
	<%= link_to "MyPage",user_path(@user)%>